@model graduation_project.Models.Useraccount

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Elegant Dashboard | Sign Up</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/AssetsAdminDashboard/img/svg/logo.svg" type="image/x-icon">
    <!-- Custom styles -->
    <link rel="stylesheet" href="~/AssetsAdminDashboard/css/style.min.css">
</head>
<body>
    <div class="layer"></div>
    <main class="page-center">
        <article class="sign-up">
            <h1 class="sign-up__title">Get started</h1>
            <p class="sign-up__subtitle">Start creating the best possible user experience for you customers</p>
            <form class="sign-up-form form" asp-action="Register" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @* <label class="form-label-wrapper">
                <p class="form-label">First Name</p>
                <input asp-for="Fname" class="form-input" type="text" placeholder="Enter First name" required>
                </label>*@
                <div class="form-group">
                    <label class="form-label-wrapper">
                        <p class="form-label">First Name</p>
                        <input class="form-input" type="text" asp-for="Fname" class="form-control" required />
                        <span asp-validation-for="Fname" class="text-danger"></span>
                    </label>
                </div>
                @* <label class="form-label-wrapper">
                <p class="form-label">Last Name</p>
                <input asp-for="Lname" class="form-input" type="text" placeholder="Enter Last name" required>
                </label>*@
                <div class="form-group">
                    <label class="form-label-wrapper">
                        <p class="form-label">Last Name</p>
                        <input class="form-input" type="text" asp-for="Lname" class="form-control" required />
                        <span asp-validation-for="Lname" class="text-danger"></span>
                    </label>
                </div>

                <div class="form-group">
                    <label class="form-label-wrapper">
                        <p class="form-label">Email</p>
                        <input class="form-input" type="email" asp-for="Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </label>
                </div>
                <div class="form-group">
                    <label class="form-label-wrapper">
                        <p class="form-label">Password</p>
                        <input class="form-input" type="password" asp-for="Password" class="form-control" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </label>
                </div>
                <div class="form-group">
                    <label class="form-label-wrapper">
                        <p class="form-label">Image</p>
                        <input class="form-input" asp-for="ImageFile" class="form-control" required />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" class="form-btn primary-default-btn transparent-btn" value="Sign Up" />
                </div>
                @if (!string.IsNullOrEmpty(ViewData["RegisterError"] as string))
                {
                    <div class="alert alert-danger">
                        @ViewData["RegisterError"]
                    </div>
                }
            </form>


            <div>
                <a asp-controller="RegisterLogin" asp-action="RegisterChef">Are you Chef!join us</a>
            </div>
        </article>
    </main>
</body>
</html>
