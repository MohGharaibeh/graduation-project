@*@model RecipeProject.Models.Homepage
*@@{
	var isLoggedIn = ViewBag.IsLoggedIn as string;
}
<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="Start your development with FoodHut landing page.">
	<meta name="author" content="Devcrud">
	<title>FoodHut</title>

	<!-- font icons -->
	<link rel="stylesheet" href="~/AssetsHomePage/assets/vendors/themify-icons/css/themify-icons.css">

	<link rel="stylesheet" href="~/AssetsHomePage/assets/vendors/animate/animate.css">

	<!-- Bootstrap + FoodHut main styles -->
	<link rel="stylesheet" href="~/AssetsHomePage/assets/css/foodhut.css">
</head>
<body>
	<nav class="custom-navbar navbar navbar-expand-lg navbar-dark fixed-top" data-spy="affix" data-offset-top="10">
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#about">About</a>
				</li>
				@if (!string.IsNullOrEmpty(isLoggedIn))
				{
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="ShowChefs">Chefs</a>
					</li>

					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="ShowAllRecipe">Recipe</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="ShowRecipeRequested">My Order</a>
					</li>
				}
			</ul>
			<a class="navbar-brand m-auto" href="#">
				<img src="~/AssetsHomePage/assets/imgs/logo.svg" class="brand-img" alt="">
				<span class="brand-txt">Food Hut</span>
			</a>
			<ul class="navbar-nav">
				@*<li class="nav-item">
				<a class="nav-link" href="#blog">Blog<span class="sr-only">(current)</span></a>
				</li>*@

				@if (string.IsNullOrEmpty(isLoggedIn))
				{
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="blog.html" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							Join Us
						</a>
						<div class="dropdown-menu" aria-labelledby="navbarDropdown">
							<a class="dropdown-item" asp-controller="RegisterLogin" asp-action="Login">Sign In</a>
							<a class="dropdown-item" asp-controller="RegisterLogin" asp-action="Register">Sign Up</a>
						</div>
					</li>
				}
				else
				{
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="blog.html" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							Settings
						</a>
						<div class="dropdown-menu" aria-labelledby="navbarDropdown">
							<a class="dropdown-item" asp-controller="Home" asp-action="ViewProfile">My Profile</a>
							<a class="dropdown-item" asp-controller="RegisterLogin" asp-action="Logout">Logout</a>
						</div>
					</li>
				}
				@if (!string.IsNullOrEmpty(isLoggedIn))
				{
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="AddTestimonial">Reviews</a>
					</li>
				}
				<li class="nav-item">
					<a class="nav-link" href="#contact">Contact Us</a>
				</li>
				@if (!string.IsNullOrEmpty(isLoggedIn))
				{
					<li class="nav-item">
						<a asp-controller="Requestrecipes" asp-action="Create" class="btn btn-primary ml-xl-4">Request Now!</a>
					</li>
				}
			</ul>
		</div>
	</nav>

	<div>
		@RenderBody()
	</div>
	<!-- page footer  -->
	<div class="container-fluid bg-dark text-light has-height-md middle-items border-top text-center wow fadeIn">
		<div class="row">
			<div class="col-sm-4">
				<h3>EMAIL US</h3>
				<P class="text-muted">@ViewBag.Email</P>
			</div>
			<div class="col-sm-4">
				<h3>CALL US</h3>
				<P class="text-muted">@ViewBag.PhoneNumber</P>
			</div>
			<div class="col-sm-4">
				<h3>FIND US</h3>
				<P class="text-muted">@ViewBag.Address</P>
			</div>
		</div>
	</div>
	<div class="bg-dark text-light text-center border-top wow fadeIn">
		<p class="mb-0 py-3 text-muted small">&copy; Copyright <script>document.write(new Date().getFullYear())</script> Made with <i class="ti-heart text-danger"></i> By <a href="http://devcrud.com">DevCRUD</a></p>
	</div>
	<!-- end of page footer -->
	<!-- core  -->
	<script src="~/AssetsHomePage/assets/vendors/jquery/jquery-3.4.1.js"></script>
	<script src="~/AssetsHomePage/assets/vendors/bootstrap/bootstrap.bundle.js"></script>

	<!-- bootstrap affix -->
	<script src="~/AssetsHomePage/assets/vendors/bootstrap/bootstrap.affix.js"></script>

	<!-- wow.js -->
	<script src="~/AssetsHomePage/assets/vendors/wow/wow.js"></script>

	<!-- google maps -->
	<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCtme10pzgKSPeJVJrG1O3tjR6lk98o4w8&callback=initMap"></script>

	<!-- FoodHut js -->
	<script src="~/AssetsHomePage/assets/js/foodhut.js"></script>
</body>
</html>
